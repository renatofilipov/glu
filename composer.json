{
    "name": "renatofilipov/glu",
    "description": "Glu API",
    "keywords": [
        "php",
        "slim-micro-framework",
        "rest",
        "mysql",
        "api"
    ],
    "homepage": "https://github.com/renatofilipov/glu",
    "authors": [
        {
            "name": "Renato Filipov",
            "email": "renato.filipov@gmail.com",
            "homepage": "https://github.com/renatofilipov"
        }
    ],
    "require": {
        "palanik/corsslim": "dev-slim3",
        "predis/predis": "^1.1",
        "respect/validation": "^1.1",
        "slim/slim": "^3.12.2",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.10.1",
        "phpunit/phpunit": "^8.0"
    },
    "config": {
        "sort-packages": true,
        "process-timeout":0
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
    }
}
